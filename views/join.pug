extends layout.pug 

block content
    h1 회원가입

   

    form.From(action="/join" method="post") 
        input.text(type="text", name="name" placeholder="이름")
        input.text(type="email" name="email" placeholder="이메일")
        input.text(type="password" name="password" placeholder="비밀번호")
        input.text(type="password" name="passwordVerify" placeholder="비밀번호 확인")
        button 회원가입 완료
        
    a(href="/login") 로그인하러 가기

        