extends layout.pug

block content
    

    form(action="/login" method="POST")
        label(for="email") E-Mail 
        input.text(type="email" placeholder="이메일" name="email" value= `${oldInput.email}`)
        input.text(type="password", placeholder="비밀번호" name="password" value= `${oldInput.password}`)
        button(type="submit") 로그인

    a(href="/join") 회원가입
    a(href="/passwordreset") 비밀번호 변경하기 


        
    